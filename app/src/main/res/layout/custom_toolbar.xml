<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_toolbar_height"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/toolbar_elevation"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetEnd="0dp">

    <ImageView
        android:id="@+id/toolbarNavIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:layout_gravity="start"
        android:contentDescription="@null"
        android:src="@drawable/ic_chevron_left"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/toolbarProgress"
            android:layout_width="@dimen/default_toolbar_progress_width"
            android:layout_height="@dimen/default_toolbar_progress_width"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/default_toolbar_title_size"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/toolbarTitleRightIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:paddingLeft="6dp"
            android:paddingStart="6dp"
            android:paddingRight="6dp"
            android:paddingEnd="6dp"
            android:contentDescription="@null"
            android:visibility="gone"/>

    </LinearLayout>

    <android.support.v7.widget.SearchView
        android:id="@+id/toolbarSearchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:visibility="gone">

    </android.support.v7.widget.SearchView>

    <TextView
        android:id="@+id/toolbarRightTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="center"
        android:textSize="@dimen/default_toolbar_right_text_size"
        android:paddingLeft="9dp"
        android:paddingStart="9dp"
        android:paddingRight="9dp"
        android:paddingEnd="9dp"
        android:visibility="gone">

    </TextView>

    <ImageView
        android:id="@+id/toolbarRightIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="center"
        android:scaleType="centerInside"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone"
        android:contentDescription="@null"/>

</android.support.v7.widget.Toolbar>