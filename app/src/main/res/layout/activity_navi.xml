<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondaryBackgroundColor">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <com.dpass.android.widgets.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@+id/tvStartUse"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/tvStartUse"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_large"
        android:text="@string/start_use"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        android:background="@drawable/button_create"
        android:layout_marginStart="@dimen/default_edge_margin"
        android:layout_marginEnd="@dimen/default_edge_margin"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>